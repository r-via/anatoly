{
  "name": "@r-via/anatoly",
  "version": "0.4.2",
  "description": "Deep Audit Agent for TypeScript codebases",
  "type": "module",
  "bin": {
    "anatoly": "./dist/index.js"
  },
  "engines": {
    "node": ">=20.19"
  },
  "files": [
    "dist/",
    "scripts/"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "test": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "postinstall": "node scripts/download-model.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r-via/anatoly.git"
  },
  "keywords": [
    "typescript",
    "audit",
    "code-review",
    "ast",
    "claude",
    "agent"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/r-via/anatoly/issues"
  },
  "homepage": "https://github.com/r-via/anatoly#readme",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.52",
    "@lancedb/lancedb": "^0.26.2",
    "@xenova/transformers": "^2.17.2",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.3",
    "js-yaml": "^4.1.1",
    "listr2": "^10.1.1",
    "tiktoken": "^1.0.22",
    "tinyglobby": "^0.2.15",
    "tree-sitter-typescript": "^0.23.2",
    "web-tree-sitter": "^0.26.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "@types/picomatch": "^4.0.2",
    "eslint": "^10.0.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  }
}
